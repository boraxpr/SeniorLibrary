@page
@model SeniorLibrary.Pages.Requests.DownloadModel

@{
    ViewData["Title"] = "Download";
}

<h1>Download</h1>

<div>
    <h4>Download book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.CreatedOn)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        @if (Model.Entrying.Downloadable.Equals(true))
        {
            <input type="submit" value="Download" class="btn btn-success" />
        }
        else
        {
            <h3 style="color:red"> Waiting for an approval...</h3>
        }
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
